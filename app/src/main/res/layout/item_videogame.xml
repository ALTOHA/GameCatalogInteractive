<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/dim10"
    >

    <ImageView
        android:id="@+id/img_cover_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/samplegameimage" />

    <TextView
        android:id="@+id/tv_title_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lbl_title_game"
        app:layout_constraintEnd_toEndOf="@id/img_cover_game"
        app:layout_constraintStart_toStartOf="@id/img_cover_game"
        app:layout_constraintTop_toBottomOf="@id/img_cover_game" />
</androidx.constraintlayout.widget.ConstraintLayout>